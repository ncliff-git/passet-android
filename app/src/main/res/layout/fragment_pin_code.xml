<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.PinCodeFragment">

    <TextView
        android:id="@+id/pin_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat_alternates"
        android:text="@string/pin_code_enter"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/pin_code_dots_linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <LinearLayout
        android:id="@+id/pin_code_dots_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/numpad_linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pin_code_text">

        <View
            android:id="@+id/dot_1"
            android:layout_width="@dimen/pin_code_dot_size"
            android:layout_height="@dimen/pin_code_dot_size"
            android:background="@drawable/pin_code_dot_selector" />

        <View
            android:id="@+id/dot_2"
            android:layout_width="@dimen/pin_code_dot_size"
            android:layout_height="@dimen/pin_code_dot_size"
            android:layout_marginStart="@dimen/pin_code_dot_margin"
            android:background="@drawable/pin_code_dot_selector" />

        <View
            android:id="@+id/dot_3"
            android:layout_width="@dimen/pin_code_dot_size"
            android:layout_height="@dimen/pin_code_dot_size"
            android:layout_marginStart="@dimen/pin_code_dot_margin"
            android:background="@drawable/pin_code_dot_selector" />

        <View
            android:id="@+id/dot_4"
            android:layout_width="@dimen/pin_code_dot_size"
            android:layout_height="@dimen/pin_code_dot_size"
            android:layout_marginStart="@dimen/pin_code_dot_margin"
            android:background="@drawable/pin_code_dot_selector" />

        <View
            android:id="@+id/dot_5"
            android:layout_width="@dimen/pin_code_dot_size"
            android:layout_height="@dimen/pin_code_dot_size"
            android:layout_marginStart="@dimen/pin_code_dot_margin"
            android:background="@drawable/pin_code_dot_selector" />

        <View
            android:id="@+id/dot_6"
            android:layout_width="@dimen/pin_code_dot_size"
            android:layout_height="@dimen/pin_code_dot_size"
            android:layout_marginStart="@dimen/pin_code_dot_margin"
            android:background="@drawable/pin_code_dot_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/numpad_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/num_1"
                style="@style/numpad_button"
                android:layout_width="@dimen/numpad_button_size"
                android:layout_height="@dimen/numpad_button_size"
                android:text="1"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/num_2"
                style="@style/numpad_button"
                android:layout_width="@dimen/numpad_button_size"
                android:layout_height="@dimen/numpad_button_size"
                android:layout_marginHorizontal="@dimen/numpad_margin"
                android:text="2"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/num_3"
                style="@style/numpad_button"
                android:layout_width="@dimen/numpad_button_size"
                android:layout_height="@dimen/numpad_button_size"
                android:text="3"
                app:backgroundTint="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/numpad_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/num_4"
                style="@style/numpad_button"
                android:layout_width="@dimen/numpad_button_size"
                android:layout_height="@dimen/numpad_button_size"
                android:text="4"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/num_5"
                style="@style/numpad_button"
                android:layout_width="@dimen/numpad_button_size"
                android:layout_height="@dimen/numpad_button_size"
                android:layout_marginHorizontal="@dimen/numpad_margin"
                android:text="5"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/num_6"
                style="@style/numpad_button"
                android:layout_width="@dimen/numpad_button_size"
                android:layout_height="@dimen/numpad_button_size"
                android:text="6"
                app:backgroundTint="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/numpad_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/num_7"
                style="@style/numpad_button"
                android:layout_width="@dimen/numpad_button_size"
                android:layout_height="@dimen/numpad_button_size"
                android:text="7"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/num_8"
                style="@style/numpad_button"
                android:layout_width="@dimen/numpad_button_size"
                android:layout_height="@dimen/numpad_button_size"
                android:layout_marginHorizontal="@dimen/numpad_margin"
                android:text="8"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/num_9"
                style="@style/numpad_button"
                android:layout_width="@dimen/numpad_button_size"
                android:layout_height="@dimen/numpad_button_size"
                android:text="9"
                app:backgroundTint="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/numpad_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <View
                android:layout_width="@dimen/numpad_button_size"
                android:layout_height="@dimen/numpad_button_size"

                />

            <Button
                android:id="@+id/num_0"
                style="@style/numpad_button"
                android:layout_width="@dimen/numpad_button_size"
                android:layout_height="@dimen/numpad_button_size"
                android:layout_marginHorizontal="@dimen/numpad_margin"
                android:text="0"
                app:backgroundTint="@null" />

            <ImageView
                android:id="@+id/backspace"
                android:layout_width="@dimen/numpad_button_size"
                android:layout_height="@dimen/numpad_button_size"
                android:background="?attr/actionBarItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="20dp"
                app:srcCompat="@drawable/ic_backspace"
                app:tint="@color/black" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>