<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ShapeAppearanceOverlay.CardView" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">5%</item>
        <item name="cornerSizeTopRight">5%</item>
    </style>

    <style name="MyEditText">
        <item name="cornerSize">10%</item>
    </style>

    <color name="mtrl_textinput_default_box_stroke_color" tools:override="true" >@color/white</color>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorAccent">@color/white</item>
        <item name="counterEnabled">true</item>
        <item name="counterTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="endIconTint">@color/white</item>
        <item name="startIconTint">@color/white</item>
    </style>

    <style name="DropdownTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorAccent">@color/white</item>
        <item name="counterTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="endIconTint">@color/white</item>
    </style>

    <style name="ToggleButtonIconOnly" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/custom_ripple_button</item>
        <item name="backgroundTint">@color/white</item>
    </style>
</resources>